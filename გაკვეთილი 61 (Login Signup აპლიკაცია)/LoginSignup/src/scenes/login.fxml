<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scenes.controllers.LoginController">
   <children>
      <Label alignment="CENTER" layoutY="33.0" prefHeight="37.0" prefWidth="600.0" text="Log In">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="statusLabel" alignment="CENTER" layoutY="94.0" prefHeight="37.0" prefWidth="600.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTextField" layoutX="220.0" layoutY="156.0" promptText="eg. johndoe" />
      <TextField fx:id="passwordTextField" layoutX="220.0" layoutY="200.0" promptText="eg. ********" />
      <Label layoutX="150.0" layoutY="160.0" text="Username" />
      <Label layoutX="152.0" layoutY="204.0" text="Password" />
      <Button layoutX="269.0" layoutY="287.0" mnemonicParsing="false" onAction="#login" text="LogIn">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label layoutX="220.0" layoutY="242.0" text="Register Here:" />
      <Button layoutX="304.0" layoutY="243.0" mnemonicParsing="false" onAction="#switchToSignUpScene" prefHeight="8.0" prefWidth="77.0" text="Sign Up">
         <font>
            <Font size="8.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
